
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model TechnologyNews.UI.Areas.Admin.Models.VM.SubCategoryVM

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/SubCategory/Add">Add SubCategory</a></li>
        <li><a href="/Admin/SubCategory/List">SubCategory List</a></li>
        <li class="active">SubCategory List</li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update SubCategories</h3>
                </div>
                <form action="/Admin/SubCategory/Update" method="post" enctype="multipart/form-data" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Name</label>
                            <input type="text" name="Name" value="@Model.SubCategory.Name" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Description</label>
                            <input type="text" name="Description" value="@Model.SubCategory.Description" class="form-control" placeholder="Description">
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">Choose Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </div>
                        <input type="text" style="visibility:hidden" name="ID" value="@Model.SubCategory.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


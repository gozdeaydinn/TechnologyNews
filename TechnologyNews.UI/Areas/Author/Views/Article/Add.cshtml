
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Author/Views/Shared/AuthorLayoutPage.cshtml";
}

@model TechnologyNews.UI.Areas.Author.Models.VM.AddArticleVM

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Author/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Author/Article/List">Article List</a></li>
        <li class="active">Add Article</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Article</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="/Author/Article/Add" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="Header">Header</label>
                            <input type="text" name="Header" class="form-control" placeholder="Header">
                        </div>
                        <div class="form-group">
                            <label for="Content">Content</label>
                            <input type="text" name="Content" class="form-control" placeholder="Content">
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">Choose Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="SubCategoryID">Choose SubCategory</label>
                            <select name="SubCategoryID" class="form-control">
                                @foreach (var item in Model.SubCategories)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Image">Image</label>
                            <input type="file" name="Image" value="" class="form-control" />
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


